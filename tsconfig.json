{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "lib":  [
                                        "ES2023",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "skipLibCheck":  true,
                            "module":  "ESNext",
                            "moduleResolution":  "Bundler",
                            "resolveJsonModule":  true,
                            "esModuleInterop":  true,
                            "strict":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "jsx":  "preserve",
                            "types":  [
                                          "node"
                                      ],
                            "allowJs":  true,
                            "noEmit":  true,
                            "incremental":  true,
                            "isolatedModules":  true,
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "paths":  {
                                          "@/*":  [
                                                      "src/*"
                                                  ]
                                      },
                            "baseUrl":  "."
                        },
    "include":  [
                    "next-env.d.ts",
                    "scripts",
                    "src",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules"
                ]
}
